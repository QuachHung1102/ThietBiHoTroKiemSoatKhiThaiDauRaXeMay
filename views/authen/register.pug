extends ../layouts/main-layout.pug

block styles
  link(rel="stylesheet" href="/css/main.css")

block content
  section.page 
    .cover 
      .login_content.cover__content
        .login_content_header
          h1 Management
          p Motorbike exhaust managing device
        .login_content_body
          form(action="./addUser" method="post").cover__form
            div.input-group
              input(type="text" name="userName" placeholder="User name" required).form-control
            div.input-group
              input(type="tel" name="numberPhone" placeholder="Phone" required).form-control
            div.input-group
              input(type="text" name="address" placeholder="Address" required).form-control
            div.input-group
              input(type="password" name="password" placeholder="Passwords" required).form-control
            div.input-group
              input(type="password" name="xacNhanMatKhau" placeholder="Passwords Confirm" required).form-control
            input(type="hidden" name="deviceType" value="web").form-control  
            div.button-login
              button(id="login" type="submit").button--yellow Sign up
          .login_navigation
            p Have an account?
              span 
                a(href="./") Login
  script(src="/js/jquery-3.6.0.js") 
  script(src="/js/jquery.waypoints.min.js") 
  script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
    crossorigin="anonymous") 
  script(src="/js/main.js") 